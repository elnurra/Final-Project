@model AlbumReadVM 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex align-items-center mb-4">
                    <h4 class="card-title mb-sm-0">Products Inventory</h4>
                    <a asp-area="AdminArea" asp-controller="Dashboard" asp-action="Index" class="text-dark ml-auto mb-3 mb-sm-0"> View all Products</a>

                </div>
                <div class="table-responsive border rounded p-1">
                    <a asp-area="AdminArea" asp-controller="Album" asp-action="Create" class="btn btn-success">Create</a>
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">Album Id:</th>
                                <th class="font-weight-bold">Image:</th>
                                <th class="font-weight-bold">Album Name:</th>
                                <th class="font-weight-bold">Genre:</th>
                                <th class="font-weight-bold">Release Date:</th>
                                <th class="font-weight-bold">Label:</th>
                                <th class="font-weight-bold">Artist:</th>
                                <th class="font-weight-bold" style="text-align:center">Status:</th>
                                <th class="font-weight-bold" style="text-align:center">Settings:</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Album item in Model.Albums)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        <img src="~/images/@item.ImageUrl" class="img-circle" style="width:100px;height:100px" />
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Genre.Name</td>
                                    <td>@item.CreatedTime.ToString("dd,MMMM,yyyy")</td>
                                    <td>@item.Label</td>
                                    <td>@item.Artist.Name</td>
                                    @if (item.IsDeleted == false)
                                    {
                                        <td>
                                            <div class="badge badge-success p-2">Active</div>

                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <div class="badge badge-danger p-2">No Active</div>
                                        </td>

                                    }
                                    <td>
                                        <ul style="display: flex; justify-content:space-between;list-style-type:none">
                                            <li>
                                                <a asp-area="AdminArea" asp-controller="Album" asp-action="Detail" asp-route-id="@item.Id"> <i class="icon-docs" style="color:blue;font-size:40px"></i></a>
                                            </li>
                                            <li>
                                                <a asp-area="AdminArea" asp-controller="Album" asp-action="Update" asp-route-id="@item.Id"><i class="icon-pencil" style="color:yellow;font-size:40px"></i></a>
                                            </li>
                                            <li>
                                                <a asp-area="AdminArea" asp-controller="Album" asp-action="Delete" asp-route-id="@item.Id"><i class="icon-trash" style="color:red;font-size:40px"></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
                <div class="d-flex mt-4 flex-wrap">
                    <p class="text-muted">Showing 1 to 10 of 57 entries</p>
                    <nav class="ml-auto">
                        <ul class="pagination separated pagination-info">
                            <li class="page-item"><a href="#" class="page-link"><i class="icon-arrow-left"></i></a></li>
                            <li class="page-item active"><a href="#" class="page-link">1</a></li>
                            <li class="page-item"><a href="#" class="page-link">2</a></li>
                            <li class="page-item"><a href="#" class="page-link">3</a></li>
                            <li class="page-item"><a href="#" class="page-link">4</a></li>
                            <li class="page-item"><a href="#" class="page-link"><i class="icon-arrow-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


