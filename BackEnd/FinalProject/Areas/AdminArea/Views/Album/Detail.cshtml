@model AlbumReadVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<h1 style="text-align:center">Detail</h1>
<div style="display: flex; flex-direction: column; align-items: center; text-align: center; max-width: 600px; margin: 0 auto;">
    <img src="~/images/@Model.Album.ImageUrl" alt="Album Cover" style="width: 300px; height: 300px; object-fit: cover; border-radius: 5px; margin-bottom: 20px;">
    <h2 style="font-size: 24px; font-weight: bold; margin-bottom: 10px;">@Model.Album.Name</h2>
    <p style="font-size: 18px; color: #777; margin-bottom: 10px;"><strong>Artist: </strong>@Model.Album.Artist.Name</p>
    <p style="font-size: 16px; color: #777; margin-bottom: 5px;"><strong>Genre: </strong>@Model.Album.Genre.Name</p>
    <p style="font-size: 16px; color: #777; margin-bottom: 5px;"><strong>Label: </strong>@Model.Album.Label</p>
    <p style="font-size: 16px; color: #777; margin-bottom: 5px;"><strong>Release Date: </strong>@Model.Album.CreatedTime.ToString("dd,MMMM,yyyy")</p>
    <h3 style="font-size: 16px; color: #777;">Songs:</h3>
    <ul style="text-align: left; margin-top: 20px; padding: 0; list-style-type: none;">
        @foreach (Song item in Model.Songs)
        {
            <li style="font-size: 14px; margin-bottom: 5px;">@item.Name</li>
        }
    </ul>
</div>
