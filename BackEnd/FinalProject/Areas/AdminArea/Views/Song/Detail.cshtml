@model Song 
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<h1 style="text-align:center">Album Detail</h1>
<div style="display: flex; flex-direction: column; align-items: center; text-align: center; max-width: 600px; margin: 0 auto;">
    <img src="~/images/@Model.Album.ImageUrl" alt="Album Cover" style="width: 300px; height: 300px; object-fit: cover; border-radius: 5px; margin-bottom: 20px;">
    <p style="font-size: 18px; color: #777; margin-bottom: 10px;"><strong>Album Name: </strong>@Model.Album.Name</p>
</div>
<div id="player">
    <audio id="audio" src=""></audio>
    <div id="controls">
        <button id="play-pause"><i class="fa-solid fa-play"></i></button>
        <input type="range" id="volume" min="0" max="1" step="0.1" value="1">
    </div>
    <div id="progress-bar">
        <div class="progress"></div>
    </div>
    <div id="time">
        <span id="current-time">0:00</span>
        <span id="duration">0:00</span>
    </div>
    <div id="playlist">

        <ul id="songs">
            <li data-src="@Url.Content("~/songs/" + Model.SongUrl)" class="songs-item active-song">
                <p>@Model.Name</p>

            </li>
           
        </ul>
    </div>

</div>
@section Play{
    <script src="~/Admin/js/audiopure.js"></script>
}