@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<h1>Create Slider Form</h1>
<div class="container">
    <div class="row">
        <div class="col-md-12" style="margin-top:50px">
            <form method="post" role="form" class="form-control-static" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Name</label>
                    <input asp-for="Photo" class="form-control" id="exampleInputEmail1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" id="exampleInputEmail1" placeholder="Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" id="exampleInputEmail1" placeholder="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                    <br />
                    <label asp-for="IsDeleted">Is Deleted?</label>
                    <input asp-for="IsDeleted" class="form-control">
                    <span class="text-danger" asp-validation-for="IsDeleted"></span>
                <button type="submit" class="btn btn-outline-success">Submit</button>
                <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

